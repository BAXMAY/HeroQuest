rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Any authenticated user can query the collection (for leaderboard, etc.)
    // but can only read/write their own specific document.
    match /users/{userId} {
      allow list: if request.auth != null;
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;

      // Users can read and write to their own subcollections.
      match /volunteer_work/{workId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      match /achievements/{achievementId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      match /redeemed_rewards/{rewardId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      match /notifications/{notificationId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // The global list of all possible achievements should be readable by any authenticated user,
    // but only writable by admins (not yet implemented, so write is false for now).
    match /achievements/{achievementId} {
      allow read: if request.auth != null;
      allow write: if false; 
    }
    
    // The global list of rewards should be readable by any authenticated user,
    // but only writable by admins (not yet implemented, so write is false for now).
    match /rewards/{rewardId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // A collection group query for volunteer_work (for the admin approvals page)
    // can only be performed by an admin.
    match /{path=**}/volunteer_work/{workId} {
      allow read: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.admin == true;
    }
  }
}
